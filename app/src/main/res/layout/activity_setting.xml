<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">




        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_first"
            />
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dip"
            android:src="@drawable/back_icon"
            android:background="@drawable/back_background"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/username"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:visibility="gone"
            android:background="@drawable/bg_rl_mine"
            android:id="@+id/modify_psw"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/img_more"
                />
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gary_line"
            />

        <RelativeLayout
            android:background="@drawable/bg_rl_mine"
            android:id="@+id/rl_updata"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:drawableLeft="@drawable/updata"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/img_more"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gary_line"
            />

        <RelativeLayout
            android:visibility="gone"
            android:background="@drawable/bg_rl_mine"
            android:id="@+id/rl_about"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出应用"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/img_more"
                />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>